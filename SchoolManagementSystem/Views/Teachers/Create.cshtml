@model SchoolManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Create";
}
<h3 id="test"></h3>
<h3 id="test1"></h3>
<h1>Create</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4- text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeacherName" class="control-label"></label>
                <input asp-for="TeacherName" id="name" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" id="subjectid" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SchoolId" class="control-label"></label>
                <select asp-for="SchoolId" id="schoolid" class ="form-control" asp-items="ViewBag.SchoolId"></select>
            </div>
            <div class="form-group">
                <input onclick="PostData()" type="submit"
     value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function PostData() {
        var name = $("#name").val();
        var subid = $("#subjectid").val();
        var model = {
            "TeacherName": name,
            "SubjectId": subid,
            "SchoolId":document.getElementById("schoolid").value
        };

        $.ajax({
            type: "POST",
            url: "https://localhost:44355/api/teacherapi",
            data: JSON.stringify(model),
            contentType: "application/json",

            success: function (result, textStatus, xhr) {
                $("#test1").append(result);
                console.log(result);
            },
            complete: function (xhr, textstatus) {
                $("#test").append("ResponseCode:"+xhr.status);
            }
        });
    }

</script>